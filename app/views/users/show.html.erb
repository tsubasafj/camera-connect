<%= render "shared/header" %>

<div class="profile-wrap">
  <div class="row">
    <div class="col-md-4 text-center">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "round-img" %>
      <% else %>
        <%= image_tag "blank-profile-picture-g3e5129d24_640.png", class: "round-img avatar-prev" %>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <h1><%= @user.name %></h1>
        <div class="row aline-items-center">
          <div class="col-md-4 profile-columns">
            Camera: <%= @user.camera %> 
          </div>
          <div class="col-md-4 profile-columns">
            Camera Career: <%= @user.camera_career %>
          </div>
          <div class="col-md-4 profile-columns">
            Model Career: <%= @user.model_career%>
          </div>
        </div>
        <%= link_to "Edit Profile", edit_user_path(@user), class: "btn btn-outline-dark common-btn edit-profile-btn" %>
      </div>
    </div>
  </div>
</div>