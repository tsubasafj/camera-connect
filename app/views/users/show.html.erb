<%= render "shared/header" %>

<div class="profile-wrap">
  <div class="row">
    <div class="col-md-4 text-center">
      <% if @user.avatar.attached? %>
        <%= image_tag @user.avatar, class: "round-img" %>
      <% else %>
        <svg xmlns="http://www.w3.org/2000/svg" fill="currentColor" class="bi bi-person-circle round-img" viewBox="0 0 16 16">
          <path d="M11 6a3 3 0 1 1-6 0 3 3 0 0 1 6 0z"/>
          <path fill-rule="evenodd" d="M0 8a8 8 0 1 1 16 0A8 8 0 0 1 0 8zm8-7a7 7 0 0 0-5.468 11.37C3.242 11.226 4.805 10 8 10s4.757 1.225 5.468 2.37A7 7 0 0 0 8 1z"/>
        </svg>
      <% end %>
    </div>
    <div class="col-md-8">
      <div class="row">
        <h1><%= @user.name %></h1>
        <div class="row aline-items-center">
          <div class="col-md-4 profile-colums">
            Camera: <%= @user.camera %> 
          </div>
          <div class="col-md-4 profile-colums">
            Camera Career: <%= @user.camera_carrer %>
          </div>
          <div class="col-md-4 profile-colums">
            Model Career: <%= @user.model_carrer%>
          </div>
        </div>
        <%= link_to "プロフィールを編集", edit_user_path(@user), class: "btn btn-outline-dark common-btn edit-profile-btn" %>
      </div>
    </div>
  </div>
</div>